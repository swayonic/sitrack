<table width="90%" id="results" cellspacing="0" class="list used" align="center" data-view-id="<%=@view.id%>">
    <tr class="not-sortable">
      <td class="white sortactive lined-t" align="center" nowrap="nowrap" colspan="2">
        Used Columns
      </td>
    </tr>
    <% if @view.sitrack_view_columns.size > 0 %>
      <% @view.sitrack_view_columns.each do |column| -%>
        <tr id="used_<%=column.id%>">
          <td class="lined-l">
            <%= column.sitrack_column.name %>
          </td>
          <td class="checkbox lined-r">
      		  <%= link_to image_tag('x.png'), 
      				{:action => :remove_column, :view_column_id => column.id},
      				{:remote => true, :title=>"Remove Column from View"} %>
      		</td>
      	</tr>
      <% end %>
    <% else %>
      <tr class="lined">
        <td colspan="2" align="center">
          No Columns Added
        </td>
    	</tr>
    <% end %>
</table>